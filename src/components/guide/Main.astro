---
import { cardsGuide } from "@/consts/consts";
import Cards from "../Cards.astro";
import Section from "../Section.astro";
---

<Section defaultClass="on" class="space-y-4">
  <div class="h-[300px] flex items-center justify-center">
    <h1
      class="mb-5 text-5xl font-semibold text-center sm:font-semibold sm:text-6xl md:text-start lg:text-7xl"
    >
      Gu√≠a del servidor
    </h1>
  </div>
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
    {
      cardsGuide.map(({ Icon, label, content, color, url }) => {
        let iconColor = "";
        switch (color) {
          case "cyan":
            iconColor = "text-cyan-500 bg-cyan-500/20 rounded-full p-2";
            break;
          case "emerald":
            iconColor = "text-emerald-500 bg-emerald-500/20 rounded-full p-2";
            break;
          case "yellow":
            iconColor = "text-yellow-500 bg-yellow-500/20 rounded-full p-2";
            break;
          case "purple":
            iconColor = "text-purple-500 bg-purple-500/20 rounded-full p-2";
            break;
          case "orange":
            iconColor = "text-orange-500 bg-orange-500/20 rounded-full p-2";
            break;
          case "teal":
            iconColor = "text-teal-500 bg-teal-500/20 rounded-full p-2";
            break;
          default:
            iconColor = "text-cyan-500";
            break;
        }
        return (
          <a href={url}>
            <Cards class="flex flex-col items-center gap-y-2">
              <Icon class={`size-12 ${iconColor}`} />
              <div class="text-center">
                <h3 class="text-xl font-semibold text-transparent bg-gradient-to-l from-cyan-500 to-white to-60% bg-clip-text">
                  {label}
                </h3>
                <p class="text-zinc-300">{content}</p>
              </div>
            </Cards>
          </a>
        );
      })
    }
  </div>
</Section>
